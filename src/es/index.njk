<!-- Start Hero section -->
<section id="hero" class="hero-section">
  <div class="t1 copy">
    <h1 class="heading">
      <span>Nosotros <span class="highlight">elevamos</span></span>
      <br />
      <span>tus muebles<span class="comma">,</span></span>

      <span>{{ t.section.hero.highlight}}<span class="comma">.</span></span>
    </h1>
    <a class="cta-btn-alt cta-heading">
      <p>{{ t.section.hero.cta}}</p>
      <svg
        class="arrow"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M7 17L17 7M17 7H8M17 7V16"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
