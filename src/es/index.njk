    </a>
  </div>
  <div class="t1 scroll">
    <p>{{t.section.hero.scroll}}</p>
    <div class="nav_spacer"></div>
  </div>
  <h2 class="reveal-time">
    {{ t.section.company.heading }}<span class="comma">.</span>
  </h2>
  <div id="galery-grid" class="reveal-grid grid">
    <div class="item small">
      <img src="../assets/images/bg-h.jpg" alt="" />
    </div>
    <div class="item">
      <img src="../assets/images/img-15.webp" alt="" />
    </div>
    <div class="item">
      <img src="../assets/images/serv1.png" alt="" />
    </div>
  </div>
  <img src="../assets/images/heading-11.png" class="t1 hero-bg" alt="" />
</section>
<!-- End of hero section -->

