<!-- Start services section -->
<section id="services" class="services-section">
  <div class="eyebrow">{{ t.section.services.label }}</div>
  <h2>{{ t.section.services.heading }}</h2>
  <div id="services-cards" class="services-cards">
    <div id="first-service" class="service-card">
      <p class="service-card__title">Alquiler de elevadores de muebles.</p>
      <p class="service-card__desc">La solución eficaz para cargas pesadas.</p>
    </div>
    <div id="second-service" class="service-card">
      <p class="service-card__title">Camiones equipados + conductor</p>
      <p class="service-card__desc">Para un transporte seguro y cómodo.</p>
    </div>
    <div id="third-service" class="service-card">
      <p class="service-card__title">Mudanzas personalizadas.</p>
      <p class="service-card__desc">Diseñado para adaptarse a tu situación.</p>
    </div>
    <div class="service-card">
      <p class="service-card__title">Materiales de mudanza</p>
      <p class="service-card__desc">
        Cajas, correas y fundas protectoras para uso doméstico.
      </p>
      <!-- <div class="icon fourth_service_icon"></div> -->
    </div>
  </div>
</section>
<!-- End services section -->

<!-- Start testimonial section -->
<section class="testimonials-section" id="testimonials">
  <div class="eyebrow">{{t.section.testimonials.label}}</div>
  <h2>{{t.section.testimonials.heading}}</h2>
  <div class="testimonials__pin">
    <!-- Track horizontal (cards) -->
    <div class="t-track-wrap">
      <div class="t-track" id="tTrack">
        <!-- Card 1 -->
        <article class="t-card">
          <div class="t-card__brand">Barclays — Rise</div>
          <p class="t-card__quote">
            Empresa muy seria. Personal profesional, atento, puntual y cortés.
            Fácil comunicación a través de WhatsApp y correo electrónico. ¡Lo
            recomiendo!
          </p>
          <div class="t-card__person">
            <img
              class="t-card__avatar"
              src="https://i.pravatar.cc/80?img=12"
              alt=""
            />
            <div>
              <strong>Moni Di Bratto</strong><br /><span
                >Utilisateur Google</span
              >
            </div>
          </div>
        </article>
        <!-- Card 2 -->
        <article class="t-card">
          <div class="t-card__brand">Argyle</div>
          <p class="t-card__quote">
            Puntual, organizado, eficaz y, además, simpático y sonriente. ¿Qué
            más se puede pedir? Profesionalidad, amabilidad y eficacia.
            ¡Recomendable!
          </p>
          <div class="t-card__person">
            <img
              class="t-card__avatar"
              src="https://i.pravatar.cc/80?img=21"
              alt=""
            />
            <div>
              <strong>Giovanna Rollo</strong><br /><span
                >Utilisateur Pagesd'or</span
              >
            </div>
          </div>
        </article>
      </div>
    </div>

    <!-- Outro centrado (aparece cuando ya pasaron las cards) -->
