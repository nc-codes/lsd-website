---
layout: layouts/base.njk
lang: en
pageKey: home
---

{% set t = i18n[lang] %}

<!-- Start Hero section -->
<section id="hero" class="hero-section">
  <div>
    <h1 class="heading">
      <span class="static">{{ t.section.hero.heading }}</span>
      <br />
      <span class="highlight">{{ t.section.hero.highlight }} </span>
    </h1>
    <!-- 
    <p class="subtitle">{{ t.section.hero.subtitle }}</p>
    <a class="cta-btn"><p>{{ t.section.hero.cta }}</p> </a> 
    -->
  </div>

  <div class="container-hero-img">
    <img class="opt" src="../assets/images/img-11.jpg" alt="" />
    <img class="opt" src="../assets/images/img-7.webp" alt="" />
  </div>

  <!-- <div class="scroll-btn">
    <span>scroll</span>
    <img src="assets/images/icons/arrow-quote.svg" />
  </div> -->
</section>
<!-- End of hero section -->

<!-- Start company section -->
<section id="company" class="company-section">
  <div class="eyebrow reveal-type">{{ t.section.company.label }}</div>
  <h2 class="reveal-type">{{ t.section.company.heading }}</h2>
  <p class="reveal-type">{{ t.section.company.goalone }}</p>
  <br />
  <p class="reveal-type">{{ t.section.company.goaltwo }}</p>
  <a class="cta-btn reveal-type"
    ><svg
      class="arrow"
      viewBox="0 0 24 24"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M7 17L17 7M17 7H8M17 7V16"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      />
    </svg>

    <p>{{ t.section.company.cta }}</p>
  </a>
</section>
<!-- End of company section -->

<section id="galery" class="galery-section">
  <div class="eyebrow">{{ t.section.galery.label }}</div>
  <h2>{{ t.section.galery.heading }}</h2>
  <div id="galery-grid" class="grid">
    <div class="item small">
      <img src="assets/images/img-1.webp" alt="" />
    </div>
    <div class="item">
      <img src="assets/images/img-2.webp" alt="" />
    </div>

    <div class="item">
      <img src="assets/images/img-4.webp" alt="" />
    </div>
  </div>
</section>
<!-- End company section -->
<!-- Start testimonial section -->
<section class="testimonials-section" id="testimonials">
  <div class="eyebrow">{{ t.section.testimonials.label }}</div>
  <h2>{{ t.section.testimonails.heading }}</h2>
  <div class="testimonials__pin">
    <div class="t-track-wrap">
      <div class="t-track" id="tTrack">
        <!-- Card 1 -->
        <article class="t-card">
          <div class="t-card__brand">Barclays — Rise</div>
          <p class="t-card__quote">
            Very reliable company. Professional, attentive, punctual and
            courteous staff. Easy communication via WhatsApp and email. I
            recommend them!
          </p>
          <div class="t-card__person">
            <img
              class="t-card__avatar"
              src="https://i.pravatar.cc/80?img=12"
              alt=""
            />
            <div>
              <strong>Moni Di Bratto</strong><br /><span>Google user</span>
            </div>
          </div>
        </article>
        <!-- Card 2 -->
        <article class="t-card">
          <div class="t-card__brand">Argyle</div>
          <p class="t-card__quote">
            Punctual, organised, efficient and, as a bonus, friendly and
            cheerful! What more could you ask for? Professionalism, friendliness
            and efficiency. Highly recommended!
          </p>
          <div class="t-card__person">
            <img
              class="t-card__avatar"
              src="https://i.pravatar.cc/80?img=21"
              alt=""
            />
            <div>
              <strong>Giovanna Rollo</strong><br /><span
                >Utilisateur Pagesd'or</span
              >
            </div>
          </div>
        </article>
        <!-- Card 3 -->
        <article class="t-card">
          <div class="t-card__brand">Stellar Security</div>
          <p class="t-card__quote">
            Very responsive and professional. Treated my goods with good care
            and worked very quickly. They speak several languages. Absolutely
            recommend.
          </p>
          <div class="t-card__person">
            <img
              class="t-card__avatar"
              src="https://i.pravatar.cc/80?img=15"
              alt=""
            />
            <div>
              <strong>Luz Rey</strong><br /><span>Utilisateur Google</span>
            </div>
          </div>
        </article>
        <!-- Card 4 -->
        <article class="t-card">
          <div class="t-card__brand">Rollpark</div>
          <p class="t-card__quote">
            Very professional, they remind one about the appointment a day
            before, communication is excellent and fast. They also help during
            the move and are very friendly.
          </p>
          <div class="t-card__person">
            <img
              class="t-card__avatar"
              src="https://i.pravatar.cc/80?img=5"
              alt=""
            />
            <div>
              <strong>Roberto Gelsomino</strong><br /><span
                >Head of Growth</span
              >
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</section>
<!-- End testimonials section-->
<!-- Start services section -->
<section id="services" class="services-section">
  <div class="eyebrow">{{ t.section.services.label }}</div>
  <h2>{{ t.section.services.heading }}</h2>
  <div id="services-cards" class="services-cards">
    <div id="first-service" class="service-card">
      <p class="service-card__title">Furniture lift hire.</p>
      <p class="service-card__desc">The effective solution for heavy loads.</p>
    </div>
    <div id="second-service" class="service-card">
      <p class="service-card__title">Camions équipés + chauffeur</p>
      <p class="service-card__desc">Pour un transport sûr et pratique.</p>
    </div>
    <div id="third-service" class="service-card">
      <p class="service-card__title">Customised removals.</p>
      <p class="service-card__desc">Designed to suit your situation.</p>
    </div>
    <div class="service-card">
      <p class="service-card__title">Moving supplies</p>
      <p class="service-card__desc">
        Boxes, straps and protective covers for home use.
      </p>
      <!-- <div class="icon fourth_service_icon"></div> -->
    </div>
  </div>
</section>
<!-- End services section -->
