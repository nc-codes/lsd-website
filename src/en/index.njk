<!-- Start testimonial section -->
<section class="testimonials-section" id="testimonials">
  <div class="eyebrow">{{ t.section.testimonials.label }}</div>
  <h2>{{ t.section.testimonials.heading }}</h2>
  <div class="testimonials__pin">
    <div class="t-track-wrap">
      <div class="t-track" id="tTrack">
        <!-- Card 1 -->
        <article class="t-card">
          <div class="t-card__brand">Barclays — Rise</div>
          <p class="t-card__quote">
            Very reliable company. Professional, attentive, punctual and
            courteous staff. Easy communication via WhatsApp and email. I
            recommend them!
          </p>
          <div class="t-card__person">
            <img
              class="t-card__avatar"
              src="https://i.pravatar.cc/80?img=12"
              alt=""
            />
            <div>
              <strong>Moni Di Bratto</strong><br /><span>Google user</span>
            </div>
          </div>
        </article>
        <!-- Card 2 -->
        <article class="t-card">
          <div class="t-card__brand">Argyle</div>
          <p class="t-card__quote">
            Punctual, organised, efficient and, as a bonus, friendly and
            cheerful! What more could you ask for? Professionalism, friendliness
            and efficiency. Highly recommended!
          </p>
          <div class="t-card__person">
            <img
              class="t-card__avatar"
              src="https://i.pravatar.cc/80?img=21"
              alt=""
            />
            <div>
              <strong>Giovanna Rollo</strong><br /><span
                >Utilisateur Pagesd'or</span
              >
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</section>
<!-- End testimonials section-->
<!-- Start services section -->
<section id="services" class="services-section">
  <div class="eyebrow">{{ t.section.services.label }}</div>
  <h2>{{ t.section.services.heading }}</h2>
  <div id="services-cards" class="services-cards">
    <div id="first-service" class="service-card">
      <p class="service-card__title">Furniture lift hire.</p>
      <p class="service-card__desc">The effective solution for heavy loads.</p>
    </div>
    <div id="second-service" class="service-card">
      <p class="service-card__title">Equipped lorries + driver</p>
      <p class="service-card__desc">For safe and convenient transport.</p>
    </div>
    <div id="third-service" class="service-card">
      <p class="service-card__title">Customised removals.</p>
      <p class="service-card__desc">Designed to suit your situation.</p>
    </div>
    <div class="service-card">
      <p class="service-card__title">Moving supplies</p>
      <p class="service-card__desc">
        Boxes, straps and protective covers for home use.
      </p>
      <!-- <div class="icon fourth_service_icon"></div> -->
    </div>
  </div>
</section>
<!-- End services section -->
