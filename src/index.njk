  <div class="hero-main">
    <div class="copy">
      <h1 class="heading">
        <span>Nous</span>
        <br />
        <span>élevons</span>
        <br />
        <span>vos</span>
        <br />
        <span> meubles</span>
        <span class="comma">,</span>
      </h1>
      <h2 class="sub-heading">{{ t.section.hero.highlight}}</h2>
    </div>
    <a class="cta-btn cta-hero">
      <p>{{ t.section.hero.cta}}</p>
      <svg
        class="arrow"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M7 17L17 7M17 7H8M17 7V16"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
